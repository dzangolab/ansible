# {{ ansible_managed }}
version: "3.7"

networks:
  {{ traefik__network }}:
    external: true

services:
  traefik:
    command:
      - "--accesslog=true"
      - "--accesslog.filePath=/var/log/traefik/access.log"
      - "--accesslog.format={{ traefik__access_log_format }}"
      - "--api.dashboard={{ traefik__dashboard }}"
      - "--log.filePath=/var/log/traefik/traefik.log"
      - "--log.format={{ traefik__log_format }}"
      - "--log.level={{ traefik__log_level }}"
      - "--providers.docker.exposedByDefault={{ traefik__expose_by_default }}"
      - "--providers.docker.network={{ traefik__network }}"
      - "--providers.docker.swarmMode=true"
      - "--providers.docker.swarmModeRefreshSeconds={{ traefik__refresh }}"
      - "--entrypoints.web.address=:80"
    deploy:
      labels:
        - "traefik.docker.network={{ traefik__network }}"
        - "traefik.enable=true"
        - "traefik.http.middlewares.auth.basicauth.users={{ traefik__dashboard_basicauth_passwords | join(',') }}"
        - "traefik.http.routers.traefik-http.entrypoints=web"
        - "traefik.http.routers.traefik-http.rule=Host(`{{ traefik__domain }}`)"
        - "traefik.http.services.traefik.loadbalancer.server.port=8080"
      placement:
        constraints:
          - "node.labels.{{ traefik__label }} == true"
          - node.role == manager
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
    image: "{{ traefik__image }}"
    networks:
      - "{{ traefik__network }}"
    ports:
      - target: 80
        published: 80
        mode: ingress
      - target: 443
        published: 443
        mode: ingress
    volumes:
      - type: volume
        source: traefik_acme
        target: /etc/traefik
      - type: volume
        source: traefik_log
        target: /var/log/traefik
      - "/var/run/docker.sock:/var/run/docker.sock:ro"

volumes:
  traefik_acme:
    driver_opts:
      type: 'nfs'
      o: 'addr={{ nfs__ip }},nfsvers=4,rw'
      device: ':{{ traefik__acme_dir }}'
  traefik_log:
    driver_opts:
      type: 'nfs'
      o: 'addr={{ nfs__ip }},nfsvers=4,rw'
      device: ':{{ traefik__log_dir }}'