####################################################################
# ANSIBLE LINK CONFIGURATION                                       #
# Generated by Ansible role - dzangolab.ansible.docker_ansible-link #
####################################################################

{% if ansible_link__webhook %}
# webhook
webhook:
  url: "{{ ansible_link_config.webhook.url }}"
  type: "{{ ansible_link_config.webhook.type | default('generic') }}"
  timeout: {{ ansible_link_config.webhook.timeout | default(5) }}
{% else %}
# webhook
# webhook:
#   url: "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
#   type: "slack" # "slack", "discord" or "generic" supported
#   timeout: 5  # optional, default 5 seconds
{% endif %}

# flask
host: '{{ ansible_link_config.host }}'
port: {{ ansible_link_config.port }}
debug: {{ ansible_link_config.debug }}

# ansible-runner
suppress_ansible_output: {{ ansible_link_config.suppress_ansible_output }}
omit_event_data: {{ ansible_link_config.omit_event_data }}
only_failed_event_data: {{ ansible_link_config.only_failed_event_data }}

# prometheus
metrics_port: {{ ansible_link_config.metrics_port }}

# general
playbook_dir: '{{ ansible_link_config.playbook_dir }}'
inventory_file: '{{ ansible_link_config.inventory_file }}'
job_storage_dir: '{{ ansible_link_config.job_storage_dir }}'
log_level: '{{ ansible_link_config.log_level }}'

# ansible-link
playbook_whitelist: {{ ansible_link_config.playbook_whitelist }}